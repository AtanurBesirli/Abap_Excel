MODULE  user_command_0100 INPUT.

  CASE sy-ucomm.
    WHEN '&BACK'.
      LEAVE TO SCREEN 0.
    WHEN '&ADD'.
      CLEAR gs_data.
      CALL SCREEN '0200'.
  ENDCASE.

ENDMODULE.
*&---------------------------------------------------------------------*
*&      Module  USER_COMMAND_0200  INPUT
*&---------------------------------------------------------------------*
*       text
*----------------------------------------------------------------------*
MODULE user_command_0200 INPUT.

  CASE sy-ucomm.
    WHEN '&BACK' or '&DIS'.
      LEAVE TO SCREEN 0.
    WHEN '&SAV1'.
      PERFORM f_save_car.
  ENDCASE.

ENDMODULE.
